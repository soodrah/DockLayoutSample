     <g:DockLayoutPanel unit="PCT">
     
       <g:north size="50">
       <g:CaptionPanel captionHTML="&#60;b&#62;Output&#60;&#47;b&#62;" styleName="{style.topCaption} {style.northPanel}">
         <g:DockLayoutPanel addStyleNames="{style.topFlowPanel}" unit="PCT">
         	<g:west size="50">
           	 <g:HTMLPanel addStyleNames="{style.floatPanelHorizontalAlignment} {style.chartContainerWidth}" ui:field="controlPanelTopChart">
           	 			<!-- <g:HTML >
    						
    						Left											
    						</g:HTML> -->
    						  
    						   
    					<div id="chartContainer" >
    					
    					</div>	 
    						 							
    						</g:HTMLPanel>
    		</g:west>
    				<g:center>
    					<g:DockLayoutPanel addStyleNames="{style.floatPanelHorizontalAlignment}" unit="PCT" >
    						<g:north size="20">
    							<g:HTMLPanel>
    							<div style="white-space:nowrap;border:1px solid green;width:50%;margin:auto;" class="{style.tippingRatioFont}">Tipping Ratio  <g:TextBox addStyleNames="{style.tippingRatioTextBox}" ui:field="tippingRatioBox" readOnly="true" maxLength="3"></g:TextBox></div>
    							</g:HTMLPanel>
    							
    						</g:north>
    						<g:center>
    							<g:HTMLPanel ui:field="controlPanelGaugeChart">
	    							<div id="gaugeContainer" style="position:relative;left:5%;"></div>	
	    						</g:HTMLPanel>
	    						
	    						
    							
    						</g:center>
    					
    						<g:south size="38">
    						<g:HTMLPanel>
    						
    						<!-- <div style="border:2px solid purple;height:3vh;width:20vw;white-space:nowrap;margin-left:5%;">
    						<g:CheckBox text="firstTextBox1" addStyleNames="{style.tippingCheckBox}"></g:CheckBox>
	    					<g:CheckBox text="firstTextBox2" addStyleNames="{style.tippingCheckBox}"></g:CheckBox>
	    					</div>
    						<div style="border:2px solid blue;height:3vh;width:20vw;white-space:nowrap;margin-left:5%;" >
    						<g:CheckBox text="firstTextBox3" addStyleNames="{style.tippingCheckBox}"></g:CheckBox>
	    					<g:CheckBox text="firstTextBox4" addStyleNames="{style.tippingCheckBox}"></g:CheckBox>
	    					</div> -->
    						<div style="white-space:nowrap;margin-left:15%;">
    						<g:CheckBox text="%Apathetics" addStyleNames="{style.tippingCheckBox} {style.apatheticsColor}" ui:field="apatheticsBox"></g:CheckBox>
	    					</div>
    						<div style="white-space:nowrap;margin-left:15%;" >
    						<g:CheckBox text="%Advocates" addStyleNames="{style.tippingCheckBox} {style.adv}" ui:field="advocatesBox"></g:CheckBox>
	    					</div>
	    					<div style="white-space:nowrap;margin-left:15%;">
    						<g:CheckBox text="%Incubators" addStyleNames="{style.tippingCheckBox} {style.inc}" ui:field="incubatorsBox"></g:CheckBox>
	    					</div>
    						<div style="white-space:nowrap;margin-left:15%;" >
    						<g:CheckBox text="%Resisters" addStyleNames="{style.tippingCheckBox} {style.res}" ui:field="resistersBox"></g:CheckBox>
	    					</div>
    						
    						
    						
    						
    						</g:HTMLPanel>
    						
    						</g:south>
    					
    					
    					</g:DockLayoutPanel>
    				
    				
    				
    				
    				</g:center>	 
    				
    				<g:east size="25" >
    			 <g:HTMLPanel addStyleNames="{style.floatPanelHorizontalAlignment} {style.chartContainerWidth}" ui:field="controlPanelTopColChart">
           	 			<!-- <g:HTML >
    						
    						Left											
    						</g:HTML> -->
    						  
    						   
    					<div id="colContainer" >
    					
    					</div>	 
    						 							
    						</g:HTMLPanel>
    				
    				</g:east>		
    						
    						
         </g:DockLayoutPanel>
        </g:CaptionPanel>
       </g:north>
       
     <!--   <g:west size="15">
         <g:FlowPanel styleName="{style.westPanel}">
           <g:Label>This is the WEST panel</g:Label>
         </g:FlowPanel>
       </g:west> -->
       <g:center>
        <g:DockLayoutPanel styleName="{style.centerPanel}" unit="PCT">
        		<g:center>
        			<g:HTMLPanel >
        			<div style="white-space:nowrap;margin-top:.5em;margin-bottom:.5em;margin-left:.5em">
        				
        				<g:Button styleName="{style.run-button}" ui:field="runButton" text="Run"></g:Button>
        				<g:Button styleName="{style.reset-button}" ui:field="resetButton" text="Reset Input"></g:Button>
        				 
        				<g:Button styleName="{style.clear-button}" ui:field="clearButton" text="Clear Output"></g:Button>
        				 
        				<g:Button styleName="{style.rsClear-button}" ui:field="resetClearButton" text="Reset &amp; Clear"></g:Button>
        				
        				<g:Button styleName="{style.forecast-button}" ui:field="forecastButton" text="Forecast"></g:Button>
        				
        				</div>
        			
        			</g:HTMLPanel>
        		</g:center>
          		 
         		</g:DockLayoutPanel>
       </g:center>
      
        <g:south size="45">
        <g:CaptionPanel captionHTML="&#60;b&#62;Input&#60;&#47;b&#62;" styleName="{style.topCaption} {style.southPanel}">
          <g:DockLayoutPanel unit="PCT" addStyleNames="{style.topFlowPanel}" >
          	<g:west size="3">
          	<g:HTMLPanel addStyleNames="{style.InputHTMLPanel}">
          	
          		<div style="white-space:nowrap;margin-left:.5vmin;width:50%">
          		<g:Button styleName="{style.add-button}" ui:field="addButton" height="3.5vmin" width="3.5vmin" ></g:Button>
          		</div>
          		<div style="white-space:nowrap;margin-left:.5vmin;width:50%">
          		<g:Button styleName="{style.delete-button}" ui:field="deleteButton" height="3.5vmin" width="3.5vmin" ></g:Button>
          		</div>
          		<div style="white-space:nowrap;margin-left:.5vmin;width:50%">
          		<g:Button styleName="{style.edit-button}" ui:field="editButton" height="3.5vmin" width="3.5vmin" ></g:Button>
          		</div>
          		<div style="white-space:nowrap;margin-left:.5vmin;width:50%">
          		<g:Button styleName="{style.save-button}" ui:field="saveButton" height="3.5vmin" width="3.5vmin" ></g:Button>
          		</div>
          		<div style="white-space:nowrap;margin-left:.5vmin;width:50%">
          		<g:Button styleName="{style.order-button}" ui:field="orderButton" height="3.5vmin" width="3.5vmin" ></g:Button>
          		</div>
          		<div style="white-space:nowrap;margin-left:.5vmin;width:50%">
          		<g:Button styleName="{style.copy-button}" ui:field="copyButton" height="3.5vmin" width="3.5vmin" ></g:Button>
          		</div>
          	
          	</g:HTMLPanel>
          	</g:west>
          	<g:east size="97">
          		<g:DockLayoutPanel unit="PCT" >
          			<g:north size="50">
          			<g:HTMLPanel addStyleNames="{style.southInputPanel}">
          			<g:Label>This is the North panel</g:Label>
          			
          			<!--  -->
          			<b3:Slider ui:field="mySlider" min="0" max="20" step="1" value="14"/>
          			
          			</g:HTMLPanel>
          			</g:north>
          			
          			
          			
          			<g:south size="50">
          			<g:HTMLPanel addStyleNames="{style.southInputPanel}">
          			
          			<g:Label>This is the South panel</g:Label>
          			</g:HTMLPanel>
          			
          			</g:south>
          		
          		
          		
          		</g:DockLayoutPanel>
          	
          	
          	</g:east>
          
          </g:DockLayoutPanel>
      </g:CaptionPanel>
        </g:south>     
     </g:DockLayoutPanel>
</ui:UiBinder> 